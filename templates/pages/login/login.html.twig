{% extends 'base.html.twig' %}

{% block title %}
	My Quizz - Log in
{% endblock %}

{% block body %}

	<div class="box">
		<div class="square" style="--i:0;"></div>
		<div class="square" style="--i:1;"></div>
		<div class="square" style="--i:2;"></div>
		<div class="square" style="--i:3;"></div>
		<div class="square" style="--i:4;"></div>
		<div class="container">
			<div class="form">
				<h2>Log In</h2>
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<div class="inputBox">
						<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="Email address">
						<i class="ri-mail-line mail-icon"></i>
					</div>
					<div class="inputBox">
						<input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Password">
						<i class="ri-lock-2-line pwd-icon"></i>
					</div>
					{# <div class="agreeTerms">
						<input type="checkbox" name="_remember_me"/>
						Keep me logged in
					</div> #}

					<p class="forget">
						<a href="#">Forgot Password ?</a>
					</p>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="inputBox">
						<input type="submit" name="" id="" value="Login">
					</div>
					<p class="no-account">Don't have an account ?
						<a href="{{ path('app_register') }}">Sign up</a>
					</p>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
