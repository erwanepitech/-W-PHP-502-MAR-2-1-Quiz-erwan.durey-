{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}
	<div class="box">
		<div class="square" style="--i:0;"></div>
		<div class="square" style="--i:1;"></div>
		<div class="square" style="--i:2;"></div>
		<div class="square" style="--i:3;"></div>
		<div class="square" style="--i:4;"></div>
		<div class="container">
			<div class="profile-container">
				<div class="title">
					<h1>User</h1>
				</div>
				<div class="card">
					<table class="table">
						<tbody>
							<tr>
								<th>Email</th>
								<td>{{ user.email }}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="profile-btn">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="edit btn">Edit profile</a>
                </div>
				<div class="profile-btn">
					{% if app.user.isverified %}
						<a href="{{ path('app_user_historical', {'id': user.id}) }}" class="btn">Game historical</a>
					{% endif %}
				</div>
				<div class="profile-btn">
                    {{ include('pages/user/_delete_form.html.twig') }}
                </div>
				<div class="alert">
				{% if error %}
					<div class="alert alert-profile">
                    <p>{{ error }}</p>
                    <a href="{{ link }}">click here to get a new one !</a>
                    </div>
				{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
